extends layout 
block content 
  h1= title 
    if(errors)
        h2.errors Oops an error occurred!
        ul.errors
          each error in errors
            li=error.message
  form(action="/books/" + book.id method="POST")
    p 
      label(for="title") Title 
      input(type="text" id="title" name="title" value=book.title)
    p 
      label(for="author") Author 
      input(type="text" id="author" name="author" value=book.author)
    p 
      label(for="genre") Genre 
      input(type="text" id="genre" name="genre" value=book.genre)
    p 
      label(for="year") Year
      input(type="text" id="year" name="year" value=book.year)
    p 
      input(type="submit" class="update-button button" value="Update Book")

  form(action="/books/"+ book.id +"/delete" method="POST" onsubmit="return confirm('Do you really want to delete this book?');")
    p 
      a.button(href="/books") Cancel 
    p 
      input(type="submit" class="button" value="Delete Book")
